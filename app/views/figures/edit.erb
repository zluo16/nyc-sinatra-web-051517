<h1>Edit <%= @figure.name %></h1>
<br>
<br>
<form action="/figures/<%= @figure.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <input type="text" name="figure[name]" value="<%= @figure.name %>"
  id="figure_name">

  <br></br>

  <% Landmark.all.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]"
    value="<%= landmark.id %>" id="landmark_<%= landmark.id %>" <%= 'checked' if @figure.landmarks.include?(landmark)%>>
    <%= landmark.name %></input>
  <% end %>

  <br></br>

  <% Title.all.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]"
    value="<%= title.id %>" id="title_<%= title.id %>" <%= 'checked' if @figure.titles.include?(title)%>>
    <%= title.name %></input>
  <% end %>

  <br></br>

  <label>And/Or Create a Landmark</label>
  <br>
  <br>
  <label for="new_landmark">Landmark Name:</label>
  <input type="text" name="landmark[name]" id="new_landmark">
  <br>
  <label>Year Completed</label>
  <input type="number" name="landmark[year_completed]">
  <br>
  <br>

  <label>And/Or Create a Title</label>
  <br>
  <br>
  <input type="text" name="title[name]" id="new_title">
  <br>
  <br>

  <input type="submit" value="Edit Figure">

</form>
